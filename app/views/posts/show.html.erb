<h1 class="title">
	<%= @post.title %>
</h1>

<p class="date">
	Submitted on <%= @post.created_at.strftime("%B %d, %Y") %> 
	<% if user_signed_in?  %>
	| <%= link_to "Edit" , edit_post_path(@post) %> | <%= link_to 'Delete', post_path(@post), :method => :delete , data: {confirm: "Are you sure?"}%> 
	<% end %>
</p>

<p class="body">
	<%= @post.body %>
</p>

<h2><%= pluralize(@post.comments.count, "Comment") %></h2>
<%= render @post.comments %>

<% if user_signed_in? %>
	<h3>Add a Comment:</h3>
	<div class="container">
		<div class="row">
			<div class="col-xs-6">
				<%= render "comments/form" %>
			</div>
		</div>
	</div>

<% end  %>