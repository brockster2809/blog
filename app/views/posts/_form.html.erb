<%= form_for @post do |f| %>
	
	<% if @post.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@post.errors.count, "error")%> prevented post from being saved</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field form-group">
		<%= f.label :title %><br>
		<%= f.text_field :title, class: "form-control" %>
	</div>

	<div class="field form-group">
		<%= f.label :body %><br>
		<%= f.text_area :body, class: "form-control" %>
	</div>

	<div class="actions form-group">
		<%= f.submit %>  <%= link_to "Back", root_path , class: 'btn btn-link' %> 
	</div>
<% end %>