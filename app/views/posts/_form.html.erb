<%= form_for @post do |f| %>
	
	<% if @post.errors.any? %>
		<h2><%= pluralize(@post.errors.count, "error")%> prevented post from being saved</h2>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	
	<% end %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit %>  <%= link_to "Back", root_path %> 
	</p>
<% end %>